{
  "name": "siteforge",
  "version": "1.0.0",
  "description": "Système de blocs Gutenberg personnalisés pour WordPress",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:editor && npm run build:admin && npm run build:blocks",
    "build:editor": "BUILD_TARGET=editor vite build",
    "build:admin": "BUILD_TARGET=design-system vite build",
    "build:blocks": "node scripts/build-blocks.js",
    "preview": "vite preview"
  },
  "keywords": [
    "wordpress",
    "gutenberg",
    "blocks",
    "custom-fields",
    "acf",
    "react"
  ],
  "author": "Hugo",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "sass": "^1.83.0",
    "vite": "^6.0.1"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "terser": "^5.44.1"
  }
}
